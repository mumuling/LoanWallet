<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MatchMatch.Vertical"
              android:background="@color/f1_type_bg">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        style="@style/MatchWrap">


        <ScrollView
            style="@style/MatchMatch"
            android:scrollbars="none">

            <LinearLayout
                style="@style/MatchWrap.Vertical">

                <LinearLayout
                    android:id="@+id/lin_mine_parent"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@mipmap/mine_bac_new"
                    android:gravity="center_vertical"
                    android:weightSum="1">


                    <com.pingxun.daishangqianbao.ui.view.XCRoundImageView
                        android:id="@+id/iv_head"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="30dp"
                        android:src="@mipmap/mine_ico"/>

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/WrapWrap"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                </LinearLayout>


                <!--申请记录 -->
                <RelativeLayout
                    android:id="@+id/mine_apply"
                    style="@style/WrapWrap"
                    android:background="@color/white"
                    android:paddingBottom="6dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/icon_apply"
                        android:gravity="center|center_horizontal|center_vertical"/>

                    <TextView
                        android:id="@+id/tv_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv1"
                        android:gravity="center"
                        android:text="申请记录"
                        android:textSize="16sp"
                        android:typeface="serif"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/arrow"/>
                </RelativeLayout>

                <include layout="@layout/line_vertical_1px_fragment4"/>

                <!--关于我们 -->
                <RelativeLayout
                    android:id="@+id/mine_about_us"
                    style="@style/WrapWrap"
                    android:background="@color/white"
                    android:paddingBottom="6dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/icon_about_us"
                        android:gravity="center|center_horizontal|center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv2"
                        android:gravity="center"
                        android:text="关于我们"
                        android:textSize="16sp"
                        android:typeface="serif"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/arrow"/>
                </RelativeLayout>



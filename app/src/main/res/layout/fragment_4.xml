<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MatchMatch.Vertical">

    <ScrollView
        style="@style/MatchMatch"
        android:scrollbars="none">

        <LinearLayout
           style="@style/MatchWrap.Vertical">


            <LinearLayout
                android:id="@+id/lin_mine_parent"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@mipmap/mine_bac_new"
                android:gravity="center_vertical"
                android:weightSum="1">


                <com.pingxun.daishangqianbao.ui.view.XCRoundImageView
                    android:id="@+id/iv_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:src="@mipmap/mine_ico"/>

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/WrapWrap"

                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

            </LinearLayout>


            <!--申请记录 -->
            <RelativeLayout
                android:id="@+id/mine_apply"
                style="@style/WrapWrap"
                android:paddingBottom="6dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/icon_apply"
                    android:gravity="center|center_horizontal|center_vertical"/>

                <TextView
                    android:layout_toRightOf="@+id/iv1"
                    android:id="@+id/tv_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="申请记录"
                    android:textSize="16sp"
                    android:typeface="serif"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>

            <include layout="@layout/line_vertical_1px_fragment4"/>

            <!--关于我们 -->
            <RelativeLayout
                android:id="@+id/mine_about_us"
                style="@style/WrapWrap"
                android:paddingBottom="6dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/icon_about_us"
                    android:gravity="center|center_horizontal|center_vertical"/>

                <TextView
                    android:layout_toRightOf="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="关于我们"
                    android:textSize="16sp"
                    android:typeface="serif"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#e0e0e9"/>

            <!--给个好评-->
            <RelativeLayout
                android:id="@+id/mine_praise"
                style="@style/WrapWrap"
                android:paddingBottom="6dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/icon_praise"
                    android:gravity="center|center_horizontal|center_vertical"/>

                <TextView
                    android:layout_toRightOf="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="给个好评"
                    android:textSize="16sp"
                    android:typeface="serif"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>

            <include layout="@layout/line_vertical_1px_fragment4"/>

            <!--联系客服-->
            <RelativeLayout
                android:id="@+id/mine_contact_us"
                style="@style/WrapWrap"
                android:paddingBottom="6dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/icon_contact_us"
                    android:gravity="center|center_horizontal|center_vertical"/>

                <TextView
                    android:layout_toRightOf="@+id/iv4"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="联系我们"
                    android:textSize="16sp"
                    android:typeface="serif"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>

            <include layout="@layout/line_vertical_1px_fragment4"/>

            <!--版本号-->
            <RelativeLayout
                android:id="@+id/mine_version"
                style="@style/WrapWrap"
                android:paddingBottom="6dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/icon_version"
                    android:gravity="center|center_horizontal|center_vertical"/>

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_toRightOf="@+id/iv5"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="版本号"
                    android:textSize="16sp"
                    android:typeface="serif"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>


            <!--退出登录-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center|center_horizontal|center_vertical">

                <Button
                    android:id="@+id/btn_quit"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borders"
                    android:text="退出登录"
                    android:textColor="#333"
                    android:textSize="20dp"
                    android:typeface="serif"
                    android:visibility="gone"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

                <!--联系客服-->
                <RelativeLayout
                    android:id="@+id/mine_contact_us"
                    style="@style/WrapWrap"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingBottom="6dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/icon_contact_us"
                        android:gravity="center|center_horizontal|center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv4"
                        android:gravity="center"
                        android:text="联系我们"
                        android:textSize="16sp"
                        android:typeface="serif"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/arrow"/>
                </RelativeLayout>

                <include layout="@layout/line_vertical_1px_fragment4"/>

                <!--版本号-->
                <RelativeLayout
                    android:id="@+id/mine_version"
                    style="@style/WrapWrap"
                    android:background="@color/white"
                    android:paddingBottom="6dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/icon_version"
                        android:gravity="center|center_horizontal|center_vertical"/>

                    <TextView
                        android:id="@+id/tv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv5"
                        android:gravity="center"
                        android:text="版本号"
                        android:textSize="16sp"
                        android:typeface="serif"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/arrow"/>
                </RelativeLayout>


                <!--退出登录-->

                <TextView
                    android:id="@+id/btn_quit"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/borders"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="#333"
                    android:textSize="20dp"
                    android:typeface="serif"
                    android:visibility="gone"/>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:banner_pageChangeDuration="1000"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
        app:banner_pointTopBottomMargin="10dp"
        app:banner_transitionEffect="cube">
    </cn.bingoogolapple.bgabanner.BGABanner>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_dydk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/dydk"
            android:gravity="center"
            android:text="抵押贷款"
            android:textColor="@color/tab_font"/>

        <RadioButton
            android:id="@+id/rb_gxdk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/gxdk"
            android:gravity="center"
            android:text="工薪贷款"
            android:textColor="@color/tab_font"/>

        <RadioButton
            android:id="@+id/rb_xydk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/xydk"
            android:gravity="center"
            android:text="信用贷款"
            android:textColor="@color/tab_font"/>

        <RadioButton
            android:id="@+id/rb_xesd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/xesd"
            android:gravity="center"
            android:text="小额速贷"
            android:textColor="@color/tab_font"/>
    </RadioGroup>

</LinearLayout>

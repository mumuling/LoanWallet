<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/MatchMatch.Vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:background="@color/white"
        android:gravity="center_horizontal"
        >

        <TextView
            style="@style/WrapWrap"
            android:layout_marginTop="20dp"
            android:text="精准"
            android:textColor="@color/black"
            android:textSize="20sp" />



        <TextView
           style="@style/WrapWrap"
            android:layout_marginTop="35dp"
            android:text="借款金额"/>

        <TextView
            android:id="@+id/tv_total_money"
            style="@style/WrapWrap"
            android:layout_marginTop="12dp"
            android:text="￥ 80,000"
            android:textColor="@color/tab_font_bright"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.pingxun.daishangqianbao.ui.view.RulerView
                android:id="@+id/rulerView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#00000000"
                app:tag_color="#00000000"
                app:scale_select_background_color="#00000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/icon_ruler" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/homePageContentScroll"
        style="@style/MatchMatch"
        android:scrollbars="none">

        <LinearLayout
            android:gravity="center_horizontal"
            style="@style/MatchWrap"
            android:background="@color/mainColor"
            android:divider="@drawable/borders"
            android:orientation="vertical"
            android:showDividers="middle">


            <!--日 月-->
            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginTop="20dp"
                android:background="@drawable/borders"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/loanUnitButton"

                    style="@style/WrapWrap"
                    android:background="@mipmap/icon_date_day" />
            </LinearLayout>

            <!--进度条-->
            <RelativeLayout
               style="@style/WrapWrap"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/limitDateStart"
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="1天"
                    android:textColor="#cc000000"
                    android:textSize="16dp"
                    android:typeface="serif" />

                <SeekBar
                    android:id="@+id/loanTimeSeekBar"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/limitDateStart"
                    android:maxHeight="10dp"
                    android:minHeight="10dp"
                    android:progressDrawable="@drawable/po_seekbar"
                    android:thumb="@drawable/seekbar_thumb"
                    android:thumbOffset="0dp" />

                <TextView
                    android:id="@+id/limitDateEnd"
                    android:layout_toRightOf="@+id/loanTimeSeekBar"
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="360天"
                    android:textAlignment="center"
                    android:textColor="#cc000000"
                    android:textSize="16dp"
                    android:typeface="serif" />

            </RelativeLayout>

            <!--还款信息-->
            <LinearLayout
                style="@style/MatchWrap.Horizontal"
                android:layout_marginTop="20dp"
                android:visibility="visible">

                <TextView
                    style="@style/MatchWrap"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="还款期限"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:typeface="serif" />

                <TextView
                    style="@style/MatchWrap"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="每期应还"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
               style="@style/MatchWrap.Horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_hkqx"
                    style="@style/MatchWrap"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="0天"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_mqyh"
                    style="@style/MatchWrap"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="￥0"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:typeface="serif" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="22dp"
                android:background="#11000000" />



            <!--搜索按钮-->
            <!--选择职业-->
            <LinearLayout
                android:id="@+id/chooseJobLine"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/chooseJobText"
                        android:layout_width="wrap_content"
                        android:gravity="fill_vertical"
                        android:layout_weight="3"
                        android:textSize="16dp"
                        android:layout_marginLeft="30dp"
                        android:text="选择职业"
                        android:layout_height="30dp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_weight="0.2"
                        android:layout_marginRight="30dp"
                        android:background="@mipmap/next_btn"
                        android:layout_height="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#11000000" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/MatchMatch"
                android:background="#08000000"
                android:gravity="center"
                android:paddingTop="15dp">

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:background="@drawable/cornerbottom"
                    android:text="搜索"
                    android:textAlignment="center"
                    android:textColor="#FFFEFF"
                    android:textSize="20dp"
                    android:typeface="serif" />

            </LinearLayout>

            <!--占位-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#08000000">
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

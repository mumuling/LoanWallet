<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/MatchWrap"
                android:background="@color/white"
                android:padding="10dp">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="14dp"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/WrapWrap"
        android:layout_toRightOf="@+id/iv"
        android:text="111111111111"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_money_range"
        style="@style/WrapWrap"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv"
        android:textSize="@dimen/sp_12"
        android:text="2222222"/>

    <TextView
        android:id="@+id/tv_time_range"
        style="@style/WrapWrap"
        android:layout_below="@+id/tv_money_range"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/iv"
        android:textSize="@dimen/sp_12"
        android:text="3333333"/>

    <TextView
        android:id="@+id/tv_interest_rate"
        style="@style/WrapWrap"
        android:layout_below="@+id/tv_time_range"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/iv"
        android:textSize="@dimen/sp_12"
        android:text="4444444"/>

    <TextView
        android:id="@+id/tv_confirm"
       android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="申请贷款"
        android:textColor="@color/tab_font_bright"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shap_red"
        style="@style/WrapWrap"/>

    <TextView
        android:id="@+id/tv_num"
        style="@style/WrapWrap"
        android:textSize="@dimen/sp_12"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_time_range"
        android:text="申请人数123人"/>

</RelativeLayout>
